{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist"
  },
  "include": [
    "./scripts",
    "./contracts",
    "./test",
    "./typechain-types",
    "./api"
  ],
  "exclude": ["node_modules", "dist"]
}
